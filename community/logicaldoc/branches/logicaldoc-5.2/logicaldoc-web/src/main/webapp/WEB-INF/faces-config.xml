<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config SYSTEM "web-facesconfig_1_1.dtd">
<faces-config xmlns="http://java.sun.com/JSF/Configuration">
	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
		<view-handler>
			com.icesoft.faces.facelets.D2DSeamFaceletViewHandler
		</view-handler>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>it</supported-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>fr</supported-locale>
			<supported-locale>es</supported-locale>
		</locale-config>
		<message-bundle>i18n.faces</message-bundle>
	</application>

	<validator>
		<validator-id>validator.email</validator-id>
		<validator-class>
			com.logicaldoc.web.util.EmailValidator
		</validator-class>
	</validator>

	<validator>
		<validator-id>validator.multipleEmails</validator-id>
		<validator-class>
			com.logicaldoc.web.util.MultipleEmailValidator
		</validator-class>
	</validator>

	<validator>
		<validator-id>validator.twoNumbers</validator-id>
		<validator-class>
			com.logicaldoc.web.util.TwoFieldsValidator
		</validator-class>
	</validator>

	<validator>
		<validator-id>validator.simplestring</validator-id>
		<validator-class>
			com.logicaldoc.web.util.SimpleStringValidator
		</validator-class>
	</validator>

	<converter>
		<converter-id>logicaldoc.FileSizeConverter</converter-id>
		<converter-class>
			com.logicaldoc.web.util.FileSizeConverter
		</converter-class>
	</converter>

	<converter>
		<converter-id>logicaldoc.FileSizeConverterKB</converter-id>
		<converter-class>
			com.logicaldoc.web.util.FileSizeConverterKB
		</converter-class>
	</converter>

	<managed-bean>
		<managed-bean-name>renderManager</managed-bean-name>
		<managed-bean-class>
			com.icesoft.faces.async.render.RenderManager
