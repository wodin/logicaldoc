	<navigation-rule>
		<description>Login</description>
		<from-view-id>/login</from-view-id>
		<navigation-case>
			<from-outcome>loginSuccess</from-outcome>
			<to-view-id>/main.iface</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>loginFailure</from-outcome>
			<to-view-id>/login.iface</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>passwordExpired</from-outcome>
			<to-view-id>/password/passwd.iface</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.iface</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.iface</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>loginSuccess</from-outcome>
			<to-view-id>/main.iface</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>passwordExpired</from-outcome>
			<to-view-id>/password/passwd.iface</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


	<lifecycle>
		<phase-listener>
			com.logicaldoc.web.MultiPageMessagesSupport
		</phase-listener>
	</lifecycle>
</faces-config>
