<!--
 Describes the plugin archive
  
 @author Marco Meschieri
 @version 3.0
-->
<assembly>
	<id>plugin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
        <fileSet>
			<includes>
                <include>pom.xml</include>
            </includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
