		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>logicaldoc-util</artifactId>
	<name>logicaldoc</name>
	<packaging>jar</packaging>
	<dependencies>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring</artifactId>
