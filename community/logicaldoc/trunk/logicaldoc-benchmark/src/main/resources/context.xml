<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans SYSTEM "spring-beans-2.0.dtd">
<beans default-lazy-init="false" default-autowire="no" default-dependency-check="none">

	<!-- This post processor ensures placeholders substitutions -->
	<bean id="PropertyPlaceholderConfigurer" class="com.logicaldoc.util.spring.PropertiesPlaceHolder"
		lazy-init="false" abstract="false" autowire="default"
		dependency-check="default">
		<property name="locations">
			<list>
				<value>classpath*:context.properties</value>
			</list>
		</property>
	</bean>

	<bean id="ContextProperties" class="com.logicaldoc.util.config.ContextProperties" />

	<bean id="Context" class="com.logicaldoc.util.Context" abstract="false"
		lazy-init="default" autowire="default" dependency-check="default" />

	<bean id="RandomFile" class="com.logicaldoc.benchmark.RandomFile">
		<property name="sourceDir" value="${load.sourcedir}" />
	</bean>
	
	<bean id="Loader" class="com.logicaldoc.benchmark.WsLoader">
		<property name="randomFile" ref="RandomFile" />
		<property name="url" value="${connection.url}" />
		<property name="username" value="${connection.username}" />
		<property name="password" value="${connection.password}" />
		<property name="folderProfile" value="${load.folderprofile}" />
		<property name="threads" value="${load.threads}" />
		<property name="iterations" value="${load.iterations}" />
		<property name="language" value="${load.language}" />
	</bean>
	
	
	<bean id="TestUpload" class="com.logicaldoc.benchmark.TestDefinition">
		<property name="name" value="upload.fast" />
		<property name="type" value="upload" />
		<property name="testCount" value="${load.threads}" />
		<property name="iterations" value="${load.iterations}" />		
	</bean>
	
	<bean id="TestTotals" class="com.logicaldoc.benchmark.TestDefinition">
		<property name="name" value="totals.basic" />
		<property name="type" value="totals" />
		<property name="testCount" value="1" />
		<property name="iterations" value="50" />
	</bean>	
	
	<bean id="TestListFolders" class="com.logicaldoc.benchmark.TestDefinition">
		<property name="name" value="listFolders.fast" />
		<property name="type" value="listFolders" />
		<property name="testCount" value="1" />
		<property name="iterations" value="50" />
	</bean>
	
	<bean id="TestSearchFullText" class="com.logicaldoc.benchmark.TestDefinition">
		<property name="name" value="searchFullText.fast" />
		<property name="type" value="searchFullText" />
		<property name="testCount" value="1" />
		<property name="iterations" value="500" />
	</bean>	
	
	<bean id="MultiLoader" class="com.logicaldoc.benchmark.MultiLoader">		
		<property name="url" value="${connection.url}" />
		<property name="username" value="${connection.username}" />
		<property name="password" value="${connection.password}" />
		<property name="sourceDir" value="${load.sourcedir}" />
		<property name="folderProfile" value="${load.folderprofile}" />
		<property name="language" value="${load.language}" />
		<property name="testList">
			<list>
			    <ref bean="TestUpload" />
			    <!-- 
			    <ref bean="TestTotals" />
			    <ref bean="TestListFolders" />
			    <ref bean="TestSearchFullText" />
			    -->			    
			</list>
		</property>
	</bean>	

</beans>
