
	<!--
		Describes the API archive @author Marco Meschieri - Logical Objects
		@version 6.0
	-->
<assembly>
	<id>api</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>context.properties</exclude>
				<exclude>context.xml</exclude>
				<exclude>ehcache.xml</exclude>
				<exclude>ldoc-log4j.xml</exclude>
			    <exclude>log4j.dtd</exclude>
			    <exclude>spring-beans-2.0.dtd</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>