<?xml version = '1.0'?>
<!-- 
 This page shows the upload document wizard
  
 @author Marco Meschieri
 @version $Id: checkin.jspx,v 1.2 2006/08/29 16:33:45 marco Exp $
 @since 3.0
-->
<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:ice="http://www.icesoft.com/icefaces/component"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:c="http://java.sun.com/jstl/core"
    xmlns:fn="http://java.sun.com/jsp/jstl/functions"
    xmlns:ldoc="http://www.logicaldoc.com/jsf" jsfc="ice:form" id="uploadForm">

    <h2>
        <ice:outputText value="#{msgs['msg.jsp.checkin']}"
            style="padding-left:8px;" />
    </h2>

    <ice:messages globalOnly="true"/>

    <ice:panelGroup styleClass="formBorderHighlight">
        <ice:panelGroup>
        
            <!-- File selection -->
            <ice:panelGroup>
            	<b><ice:outputText value="#{documentForm.title}" /></b>
            </ice:panelGroup>
            
            <br />
            <br />

            <!-- File selection -->
            <ice:panelGroup>
                <ice:inputFile id="iFile"
                    styleClass="inputFile"
                    progressRender="true"
                    progressListener="#{inputFile.progress}"
                    actionListener="#{inputFile.action}"
                    inputTextSize="45"
                    label="#{msgs['upload.button']}" />
                <ice:outputProgress id="pro" value="#{inputFile.percent}" />
                <ice:outputText value="#{msgs['upload.filename']}: #{inputFile.fileName}"
                    style="padding-left:8px;" />
                <br />
                <ice:messages for="iFile"/>
            </ice:panelGroup>
            
            <br />


            <!-- Description -->
            <ice:panelGrid columns="2">            
                 <!-- Version type selection -->
                 <ice:panelGroup styleClass="outputLabel">
                     <ice:outputText value="#{msgs['checkin.majorupdate']}:"
                        style="padding-left:8px;" />
                 </ice:panelGroup>
                 <ice:selectBooleanCheckbox value="#{documentForm.majorUpdate}" />

                 <br />
                 <br />

                <!-- Version description -->
                <ice:panelGroup styleClass="outputLabel">
                 <ice:outputText value="#{msgs['msg.jsp.versiondesc']}:"
                    style="padding-left:8px;" />
                </ice:panelGroup>
                <ice:inputTextarea id="versiondesc" value="#{inputFile.description}"
						 cols="35" rows="2" />
						 
                 <br />
                 <br />

                <!-- Check fileName -->
                <ice:panelGroup styleClass="outputLabel">
                 <ice:outputText value="#{msgs['checkin.checkoriginalfilename']}:"
                    style="padding-left:8px;" />
                </ice:panelGroup>
                <ice:panelGroup>
                  <ice:selectBooleanCheckbox value="#{documentForm.checkOriginalFilename}" />
                </ice:panelGroup>
            </ice:panelGrid>
        </ice:panelGroup>
		<hr />
        <ice:panelGroup styleClass="commands">
            <ice:commandButton value="#{msgs['abort']}"
                partialSubmit="true"
                immediate="tue"
                action="#{newDocWizard.abort}" />
            <ice:commandButton value="#{msgs['checkin.cancelcheckout']}" action="#{documentForm.unlock}" />
            <ice:commandButton value="#{msgs['msg.jsp.checkin']}"
                action="#{documentForm.checkin}" disabled="#{inputFile.percent!=100}" />    
        </ice:panelGroup>
    </ice:panelGroup>
</jsp:root>
