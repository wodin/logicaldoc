<!--
 Describes the plugin archive
  
 @author Marco Meschieri
 @version 4.0
-->
<assembly>
	<id>plugin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
              <include>org.springmodules:*</include>
              <include>org.jbpm.jbpm3:*</include>
              <include>bsh:*</include>
              <include>javax.jcr:*</include>
              <include>com.thoughtworks.xstream:*</include>
              <include>xpp3:*</include>
              <include>org.freemarker:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>classes</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp</directory>
			<outputDirectory>webapp</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/lib</directory>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>plugin.xml</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
	</fileSets>
</assembly>
