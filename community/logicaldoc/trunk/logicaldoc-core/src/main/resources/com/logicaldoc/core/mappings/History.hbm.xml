<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">
	<class name="com.logicaldoc.core.document.History" table="ld_history">
		<cache usage="read-write" />
        <id name="id" type="long" column="ld_id" unsaved-value="0">
            <generator class="increment" />
        </id>
		<property name="docId" type="long" column="ld_docid" />
		<property name="date" type="timestamp" column="ld_date" />
		<property name="username" type="string" column="lo_username" length="30" />
		<property name="event" type="string" column="lo_event" length="255" />
	</class>
</hibernate-mapping>
