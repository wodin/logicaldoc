<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="logicaldoc-external-authentication" version="4.0.0" class="com.logicaldoc.authentication.ExternalAuthenticationPlugin">
	
	<requires>
		<import plugin-id="logicaldoc-core" />
	</requires>

	<runtime>
		<library id="logicaldoc-external-authentication" path="classes/" type="code">
			<export prefix="*" />
		</library>
		<library id="commons-logging" path="lib/commons-logging-1.1.1.jar" type="code">
			<export prefix="*" />
		</library>
		<library id="ldapbp" path="lib/ldapbp-1.0.jar" type="code">
			<export prefix="*" />
		</library>
		<library id="spring-dao" path="lib/spring-dao-2.0.8.jar" type="code">
			<export prefix="*" />
		</library>
		<library id="spring-ldap" path="lib/spring-ldap-1.1.2.jar" type="code">
			<export prefix="*" />
		</library>
	</runtime>
	<extension-point id="AuthenticationComponents">
    	<parameter-def id="beanId" />
    </extension-point>
    
	<extension plugin-id="logicaldoc-external-authentication" point-id="AuthenticationComponents" id="ldapAuth">
		<parameter id="beanId" value="ldapAuthenticationComponent"/>
	</extension>
</plugin>